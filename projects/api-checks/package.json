{
  "name": "@useoptic/api-checks",
  "packageManager": "yarn@3.0.2",
  "version": "0.24.20",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "/build"
  ],
  "scripts": {
    "build": "yarn tsc --build --verbose && yarn babel ./src --out-dir ./build --extensions \".ts\",\".tsx\"",
    "ws:build": "yarn build",
    "ws:clean": "rm -rf build",
    "ws:test": "RUN_CHECK_JEST_TESTS=YES yarn dev:test",
    "dev:test": "jest --colors",
    "local:run": "ts-node ./src/run-local.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/analytics-node": "^3.1.7",
    "@types/babel__core": "^7",
    "@types/babel__plugin-transform-runtime": "^7",
    "@types/babel__preset-env": "^7",
    "@types/chai": "^4.2.22",
    "@types/copyfiles": "^2",
    "@types/fs-extra": "^9.0.13",
    "@types/is-url": "^1.2.30",
    "@types/jest": "^27.4.0",
    "@types/json-stable-stringify": "^1.0.33",
    "@types/jsonpath": "^0.2.0",
    "@types/lodash.groupby": "^4.6.6",
    "@types/lodash.isequal": "^4.5.5",
    "@types/nice-try": "^2.1.0",
    "@types/node": "^17.0.15",
    "@types/url-join": "^4.0.1",
    "@types/uuid": "^8.3.1",
    "babel-jest": "^27.5.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "dotenv": "^11.0.0",
    "jest": "^27.5.0",
    "jshint": "^2.13.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.2",
    "@octokit/rest": "^18.12.0",
    "@sentry/node": "^6.15.0",
    "@stoplight/spectral-core": "^1.8.1",
    "@stoplight/spectral-rulesets": "^1.3.2",
    "@useoptic/json-pointer-helpers": "workspace:*",
    "@useoptic/openapi-io": "workspace:*",
    "@useoptic/openapi-utilities": "workspace:*",
    "analytics-node": "^6.0.0",
    "chai": "^4.3.4",
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "dotenv": "^16.0.0",
    "fs-extra": "^10.0.0",
    "is-url": "^1.2.4",
    "json-stable-stringify": "^1.0.1",
    "jsonpath": "^1.1.1",
    "lodash.groupby": "^4.6.0",
    "lodash.isequal": "^4.5.0",
    "nice-try": "^3.0.0",
    "node-fetch": "^2.6.7",
    "ts-invariant": "^0.9.4",
    "url-join": "^4.0.1",
    "uuid": "^8.3.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "build"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.{spec,test,rule}.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      "^nimma/fallbacks$": [
        "<rootDir>../../node_modules/nimma/dist/cjs/fallbacks/index.js",
        "<rootDir>../../../../node_modules/nimma/dist/cjs/fallbacks/index.js"
      ],
      "^nimma/legacy$": [
        "<rootDir>../../node_modules/nimma/dist/legacy/cjs/index.js",
        "<rootDir>../../../../node_modules/nimma/dist/legacy/cjs/index.js"
      ]
    }
  }
}
